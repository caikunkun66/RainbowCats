.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}

.form-cell_placeholder {
  font-size: small;
  color: #d3d3d3;
}

.form-cell_input {
  width: 100%;
  font-size: small;
  color: black;
}

.credit-input-row {
  display: flex;
  align-items: center;
  gap: 12px;
}
.credit-slider {
  flex: 1;
}
.credit-number-input {
  width: 90px;
  padding: 6px 10px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
  color: #353535;
}

.footer {
  width: 100%;
  height: 8%;
  bottom: 0;
  display: flex;
  position: fixed;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  font-size: 12px;
  text-align: center;
}

.reset {
  color: #353535;
  background: white;
}

.save {
  color: white;
  background: #353535;
}
.save.disabled {
  opacity: 0.5;
  pointer-events: none;
}