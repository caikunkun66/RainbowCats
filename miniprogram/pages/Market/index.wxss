.background {
  width: 70vw;
  margin-top: 5vh;
}

.title {
  margin-top: 20px;
  font-size: 17px;
  font-weight: bold;
}
.subtitle {
  margin-top: 9px;
  font-size: 12px;
}

.swiper-image{
  display: block;
  height: 100%; 
  width: 100%;
  background-color: darkgray;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.form-cell {padding: 0;}
.slide {
  display: flex;
  align-items: center;
  padding: 10px;
  position: relative;
}

.item-info {
  width: auto;
  margin-left: 10px;
  display: flex;
  flex-direction: column
}
.item-info_title {
  font-size: 18px;
}
.item-info_desc {
  font-size: 10px;
  color: #BDBDBD;
}
.item-info_date {
  font-size: 10px;
  color: #BDBDBD;
}
.item-info_author {
  width: 70px;
  height: 100%;
  position: absolute;
  right: 10%;
  bottom: 0;
}
.item-info_award {
  font-size: 10px;
}

.star {
  width: 40px;
  height: 40px;
  position: absolute;
  right: 0;
  top: 0;
}

.buyBtn .weui-slideview__btn {background-color: greenyellow;}
.starBtn .weui-slideview__btn {background-color: gold;}
.removeBtn .weui-slideview__btn {background-color: lightsalmon;}

.btn-normal{
  margin: 2%;
  color: white;
  background-color: #3d3d3d;
}
.btn-hover{
  color: black;
  background-color: gray;
}

.search-bar {
  position: relative;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border: 1rpx solid #E6E6EA;
  border-radius: 5px;
}
.search-input {
  position: relative;
  left: 28px;
  height: 28px;
  width: 80%;
  line-height: 28px;
  font-size: 14px;
}
.search-icon {
  position: absolute;
  margin: 2px;
}

.filter-row {
  display: flex;
  margin-top: 12px;
  gap: 16px;
}
.filter-avatar {
  display: flex;
  align-items: center;
  padding: 6px 14px;
  border-radius: 999px;
  background:  #ffffff;
  color: #8a8a8a;
  font-size: 12px;
  border: 1px solid rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}
.filter-avatar image {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin-right: 6px;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.12));
}
.filter-avatar.active {
  background: #ffffff;
  border-color: rgba(255, 87, 148, 0.4);
  color: #ff4f88;
  box-shadow: 0 6px 16px rgba(255, 87, 148, 0.18);
}

.page-title{
    position: fixed;
    font-size: 10px;
    width: 100%;
    height: 25px;
    top: 0px;
    color: white;
    box-shadow: 1px 1px 10px black;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 10;
}